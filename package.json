{
  "name": "emailonacid",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Sergey Bekrin <sergey@bekrin.me>",
  "license": "MIT",
  "scripts": {
    "lint": "spire lint",
    "test": "spire test",
    "release": "spire release"
  },
  "devDependencies": {
    "@researchgate/spire-config": "^1.5.2",
    "jest-image-snapshot": "^2.11.0",
    "spire": "^1.7.3",
    "spire-plugin-lerna-release": "^1.7.3"
  },
  "jest": {
    "preset": "@researchgate/jest-preset",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/.setup.jest.js"
    ],
    "collectCoverageFrom": [
      "packages/**/*.js",
      "!packages/**/*.spec.js",
      "!**/node_modules/**"
    ]
  },
  "spire": {
    "extends": [
      [
        "@researchgate/spire-config",
        {
          "eslint": "node"
        }
      ]
    ],
    "plugins": [
      "spire-plugin-lerna-release"
    ]
  },
  "prettier": "@researchgate/prettier-config"
}
